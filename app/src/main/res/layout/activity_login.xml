<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0101"
    tools:context=".activity.login">

    <ImageView
        android:id="@+id/loginimage"
        android:layout_width="402dp"
        android:layout_height="229dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/bookloginn" />

    <EditText
        android:layout_marginTop="15dp"

        android:id="@+id/loginmobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginimage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="@string/mobile_no"
        android:background="@drawable/corner"
        android:textColor="#000000"
        android:maxLines="1"
        android:padding="20dp"

        android:textColorHint="#7E7B7B" />

    <EditText
        android:id="@+id/loginpassward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginmobileno"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:textColor="#000000"
        android:background="@drawable/corner"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="20dp"
        android:textColorHint="#7E7B7B" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/loginpassward"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:paddingBottom="5dp"


        android:text="LOG IN"
        android:textColor="#E8EAF6"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/loginregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/loginforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Forgot Passward?"
        android:textColor="#ffffff" />
</RelativeLayout>


