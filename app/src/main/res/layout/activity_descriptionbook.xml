<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Relativelayoutdescription1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.descriptionbook"
    >





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/CardView.Dark"
        app:title="Book Details"
        app:titleMarginStart="5dp"

       />


    <RelativeLayout
        android:id="@+id/relativelayoutdescription"
        android:layout_width="342dp"
        android:layout_height="136dp"
        android:layout_below="@id/toolbardescription"
        android:layout_marginTop="-3dp">


        <ImageView
            android:id="@+id/imagedescription"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:cropToPadding="true"
            android:padding="8dp"

            android:scaleType="centerInside"
            android:scrollbars="vertical"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/descriptionlinearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imagedescription"
            android:orientation="vertical">

            <TextView
                android:id="@+id/booknamedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"

                android:fontFamily="cursive"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="name"
                android:textColor="#0A8F06"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookauthordescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text="author"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/bookpricedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:padding="10dp"

                android:text="rs 299"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />


        </LinearLayout>


            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bookratingdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/toolbardescription"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/relativelayoutdescription"
        android:text="4.5"
        android:textColor="#F1F817"></TextView>

    <Button
        android:id="@+id/buttondescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="Add to Favourites"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/descriptionabout"
        android:layout_below="@id/relativelayoutdescription"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the book"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="18sp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttondescription"

        android:layout_margin="5dp"
        android:layout_below="@id/descriptionabout"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/descriptionofbook"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </ScrollView>
    <RelativeLayout
        android:id="@+id/progresbardescriptionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ProgressBar
            android:id="@+id/progressbardescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"></ProgressBar>

    </RelativeLayout>



</RelativeLayout>

